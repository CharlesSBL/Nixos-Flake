// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "show_edit_predictions": false,
  "languages": {
    "Nix": {
      "show_edit_predictions": false
    }
  },
  "features": {
    "edit_prediction_provider": "zed"
  },
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "ui_font_size": 16,
  "buffer_font_size": 20,
  "buffer_font_weight": 900,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Ayu Dark"
  },

  "lsp": {
    "rust-analyzer": {
      "binary": {
        // Tells Zed to search for 'rust-analyzer' in the PATH
        "path_lookup": true
      }
    },
    "nil": {
      // Or potentially "nix", check Zed's documentation if 'nil' doesn't work
      "binary": {
        "path_lookup": true
      }
    },
    "elixir-ls": {
      "binary": {
        "path_lookup": true
      }
    },
    "typescript-language-server": {
      // The key here might vary, check Zed's defaults/docs
      "binary": {
        "program": "typescript-language-server", // Explicit program name if needed
        "arguments": ["--stdio"] // Common arguments
      }
      // Alternatively, try path_lookup first:
      // "binary": { "path_lookup": true }
    },
    "pylsp": {
      // Common name for python-lsp-server in editor configs
      "binary": {
        "path_lookup": true
      }
    }
    // Add entries for other LSPs you installed using path_lookup = true
  }
}
