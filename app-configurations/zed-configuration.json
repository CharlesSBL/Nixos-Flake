// Zed settings

{
  "ui_font_size": 16,
  "buffer_font_size": 20,
  "buffer_font_weight": 900,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },

  "lsp": {
    "rust-analyzer": {
      "binary": {
        // Tells Zed to search for 'rust-analyzer' in the PATH
        "path_lookup": true
      }
    },
    "nil": {
      // Or potentially "nix", check Zed's documentation if 'nil' doesn't work
      "binary": {
        "path_lookup": true
      }
    },
    "elixir-ls": {
      "binary": {
        "path_lookup": true
      }
    },
    "typescript-language-server": {
      // The key here might vary, check Zed's defaults/docs
      "binary": {
        "program": "typescript-language-server", // Explicit program name if needed
        "arguments": ["--stdio"] // Common arguments
      }
      // Alternatively, try path_lookup first:
      // "binary": { "path_lookup": true }
    },
    "pylsp": {
      // Common name for python-lsp-server in editor configs
      "binary": {
        "path_lookup": true
      }
    }
    // Add entries for other LSPs you installed using path_lookup = true
  }
}
